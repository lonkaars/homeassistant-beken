{
	"$schema": "https://dprint.dev/schemas/v0.json",
	"projectType": "openSource",
	"incremental": true,
	"useTabs": true,
	"typescript": {
		"semiColons": "always",
		"quoteStyle": "preferSingle",
		"importDeclaration.spaceSurroundingNamedImports": true
	},
	"includes": [ "**/*.{ts}" ],
	"excludes": [
		"node_modules/**",
		"**/*-lock.json"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.44.0.wasm"
	]
}
